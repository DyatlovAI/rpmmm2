<Window x:Class="rpmmm.email"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rpmmm"
        mc:Ignorable="d"
                  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="redact" Height="350" Width="500">

    <Grid Background="White" >
        <Border MinWidth="400" Background="white" Margin="15" VerticalAlignment="Center" Padding="30" MaxWidth="500" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <TextBox materialDesign:HintAssist.Hint="Введите свою почту" x:Name="second" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                <Button  Content="Отправить" HorizontalAlignment="Center" FontSize="20" Style="{StaticResource MaterialDesignFlatButton}" Click="Button_Click" />
                <Button  Content="Войти" HorizontalAlignment="Center" Margin="0 10 0 0" FontSize="15" Style="{StaticResource MaterialDesignFlatButton}" Click="Button_Click_1" />

            </StackPanel>
        </Border>
    </Grid>

</Window>
